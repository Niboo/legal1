<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_product_barcode">
            <t t-call="report.layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="margin: 0; padding: 0;font-size: 16px;">
                        <div class="row">
                            <div class="col-xs-8 mt2 text-left">
                                <div t-esc="get_supplier_product_code()" style="overflow:hidden;font-weight: bold;" />
                            </div>
                            <div class="col-xs-4 mt2 text-right">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 40px;" />
                            </div>
                        </div>
                        <div class="row" style="padding: 10px 0;">
                            <div class="col-xs-12 mt2 text-left">
                                <img
                                    t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('Code128', o.default_code, 1500, 400)"
                                    style='margin-left:-15;width:300;height:60;'
                                    />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-7 mt2 text-left" style="overflow:hidden;">
                                <span t-field="o.default_code" style="font-weight:bold;"/>
                            </div>
                            <div class="col-xs-5 mt2 text-right" style="overflow:hidden;">
                                <span t-field="o.loc_rack" style="font-weight:bold;"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
