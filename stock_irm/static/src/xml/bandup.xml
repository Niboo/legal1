    <t t-name="next_products">
        <table class="table" id="next-products-table">
            <t t-foreach="moves" t-as="move">
                <tr>
                    <td id="next-product-img"><a href="#"><img src="/stock_irm/static/img/product1.jpg" class="center-block img-responsive"/><!--<img t-att-src="product.product_image" class="center-block img-responsive"/>--></a></td>
                    <td>product_name<!--<span t-esc="move.product.product_name"/>--></td>
                    <td><div class="form-control text-center">location_name<!--<span t-esc="move.product.location_name"/>--></div></td>
                    <td>product_quantity<!--<span t-esc="move.product.product_quantity"/>--></td>
                    <td><i class="fa fa-arrow-right" aria-hidden="true"></i></td>
                    <td>picking_name<!--<span t-esc="move.picking_name"/>--></td>
