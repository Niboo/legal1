<?xml version="1.0" encoding="utf-8"?>
<templates>

    <!-- Supplier templates-->
    <t t-name="go_picking">
        <div class="container">
            <div id="results" class="scan-row">
                <div id="create-wave" class="row">
                    <span>Create a picking wave</span>
                </div>
            </div>
        </div>
    </t>

    <t t-name="worklocation_result">
        <!-- cart selection modal -->
        <div class="row">
            <t t-foreach="worklocations" t-as="worklocation">
                <a href="#" class="btn btn-lg btn-success worklocation col-md-3" t-att-worklocation-id="worklocation.id" t-att-worklocation-name="worklocation.name">
                    <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> <t t-esc="worklocation.name" />
                </a>
            </t>
        </div>

    </t>

    <t t-name="change_user">
        <!-- cart selection modal -->
        <div class="row">
            <div class="col-md-3" />
            <div class="col-md-6" >
                <form class="oe_login_form" role="form" method="post" _lpchecked="1">
                    <div id="login-image" style="display:none"></div>
                    <div class="form-group">
                        <label for="login" class="control-label">Email</label>
                        <input id="login" type="text" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password" class="control-label">Password</label>
                        <input id="password" type="password" class="form-control"/>
                    </div>
                </form>
            </div>
            <div class="col-md-3" />
        </div>
    </t>

    <t t-name="change_user_footer">
        <a id="modal_changer_user_button" href="#" class="btn btn-success">
            Change User
        </a>
    </t>

    <t t-name="print_error_message">
        <!-- cart selection modal -->
        <span class='fa fa-times fa-10x' style='color:red'></span><b style='font-size: 2em'>  You didn't scan the right <t t-esc="type" /></b>
        <t t-if="type == 'product'">
            <div style='font-size: 2em'>You should scan the following product:</div>
            <div>
                <a href="#">
                    <img t-att-src="image" class="center-block img-responsive" />
                </a>
            </div>
            <div style='font-size: 2em'>Found in location <b><t t-esc="location" /></b></div>
        </t>
        <t t-if="type== 'location'">
            <div style='font-size: 2em'>You should put your item in the location <b><t t-esc="dest_location"/></b></div>
        </t>
    </t>

    <t t-name="counter_error">
        <!-- cart selection modal -->
        <span class='fa fa-times fa-10x' style='color:red'></span><b style='font-size: 2em'>You didn't select the right number of item</b>
        <div style='font-size: 2em'>Selected count: <t t-esc="real"/>, expected: <t t-esc="expected"/> items</div>
    </t>

    <t t-name="picking_layout">
        <div id="picking-layout">
            <div class="container">
                <div class="row">
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <h1>Wave <t t-esc="wave_id"/></h1>
                        <hr/>
                        <div id="picking_list">

                        </div>
                    </div>
                    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                        <div id="product-list">
                            <div id="current_product" class="row">

                            </div>
                            <div id="next_products" class="row">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="picking_list">
        <ul class="list-group">
            <t t-foreach="pickings" t-as="picking">
                <li class="list-group-item" id="picking-list-group">
                    <div class="progress picking_progress" id="picking-list">
                        <div t-att-id="picking.picking_id" class="progress-bar picking_done" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" t-att-style="'width: '+picking.progress_done+'%;'">
                           <span t-esc="picking.picking_name"/>
                        </div>
                    </div>
                </li>
            </t>
        </ul>
    </t>

    <t t-name="current_product">
        <div class="row" id="current-product-name-row">
            <div id="current-product-img" class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <h3><span t-esc="product.location_dest_name"/></h3>
                <a href="#">
                    <img t-att-src="product.product_image" class="center-block img-responsive"/>
                </a>
            </div>
            <div id="current-product-description" class="col-xs-11 col-sm-11 col-md-7 col-lg-7">
                <h3><span t-esc="product.product_name"/></h3>
                <span t-esc="product.product_description"/>
            </div>
            <div id="current-product-buttons" class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                <p><button type="button" class="btn btn-info btn-large buttons-product">
                    <i class="fa fa-barcode" aria-hidden="true"></i>
                </button></p>
                <p><button type="button" class="btn btn-danger btn-large buttons-product">
                    <i class="fa fa-minus-circle" aria-hidden="true"></i>
                </button></p>
            </div>
        </div>

        <div class="row text-center" id="current-product-quantity-row">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <div id="expected_qty" class="form-control form-control-picking center-block text-center">
                            <div t-esc="product.product_quantity"/>
                        </div>
                        <h4><span t-esc="product.location_dest_name"/></h4>
                    </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
                <h3><i class="fa fa-arrow-right" aria-hidden="true"></i></h3>
            </div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="input-group input-picking text-center">
                    <div id="quantity_wave" class="input-group input-picking text-center">
                         <span class="input-group-btn">
                             <button class="btn btn-default form-control-picking-buttons" data-dir="dwn"><span class="glyphicon glyphicon-minus"></span></button>
                         </span>
                         <input type="text" class="form-control text-center form-control-picking" value="0"/>
                         <span class="input-group-btn">
                            <button class="btn btn-default form-control-picking-buttons" data-dir="up"><span class="glyphicon glyphicon-plus"></span></button>
                         </span>
                    </div>
                </div>
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
                <h3><i class="fa fa-arrow-right" aria-hidden="true"></i></h3>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <div id="qty_in_box" class="form-control form-control-picking center-block text-center">0</div>
                <h4><span t-esc="product.picking_name"/></h4>
            </div>
        </div>
    </t>

    <t t-name="next_products">
        <div class="row">
            <table class="table" id="next-products-table">
                <t t-foreach="moves" t-as="move">
                    <tr>
                        <td><a href="#"><img t-att-src="product.product_image" class="center-block img-responsive"/></a></td>
                        <td><span t-esc="move.product.product_name"/></td>
                        <td><div class="form-control"><span t-esc="move.product.location_dest_name"/></div></td>
                        <td><span t-esc="move.product.product_quantity"/></td>
                        <td><i class="fa fa-arrow-right" aria-hidden="true"></i></td>
                        <td><span t-esc="move.product.picking_name"/></td>
                    </tr>
                </t>
            </table>
        </div>
    </t>

    <t t-name="picking_empty">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h2>No picking were found!</h2>
                    <hr/>
                </div>
            </div>
        </div>
    </t>
</templates>

