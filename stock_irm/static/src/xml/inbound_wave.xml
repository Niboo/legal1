<?xml version="1.0" encoding="utf-8"?>
<templates>

    <t t-name="inbound_wave_layout">
        <div id="inbound-wave-layout">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div id="info_message">

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div id="current_product">
                            <t t-call="current_product" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div id="next_products">
                            <t t-call="next_products" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="current_product">
        <div id="current-product-name-row" class="row">
            <div id="current-product-img" class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <h3><span t-esc="location_name"/></h3>
                <a href="#">
                    <img src="#" class="center-block img-responsive"/><!-- <img t-att-src="product.product_image" class="center-block img-responsive"/> -->
                </a>
            </div>
            <div id="current-product-description" class="col-xs-10 col-sm-10 col-md-5 col-lg-5">
                <h3>product_name<!--<span t-esc="product.product_name"/>--></h3>
                product_description<!--<span t-esc="product.product_description"/>-->
            </div>
            <div id="current-product-buttons" class="col-xs-2 col-sm-2 col-md-3 col-lg-3 text-right">
                <button id="manual-barcode-input" type="button" class="btn btn-info btn-large buttons-product">
                    <i class="fa fa-barcode" aria-hidden="true"></i>
                </button>
                <div class="num-pad">
                    <input id="manual-barcode" type="text" class="form-control text-center numpad-control-picking"/>

                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>1</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>2</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>3</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>4</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>5</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>6</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>7</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>8</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>9</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>C</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>0</span>
                            </div>
                        </div>
                    </div>
                    <div class="circle">
                        <div class="num">
                            <div>
                                <span>Enter</span>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="skip-picking-line" type="button" class="btn btn-danger btn-large buttons-product">
                    <i class="fa fa-minus-circle" aria-hidden="true"></i>
                </button>
            </div>
        </div>

        <div class="row text-center" id="current-product-quantity-row">
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div id="expected_qty" class="form-control form-control-picking pull-left text-center">
                    product_quantity<!--<div t-esc="product.product_quantity"/>-->
                </div>
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
                <h3><i class="fa fa-arrow-right buttons-icons-quantity" aria-hidden="true"></i></h3>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="input-group input-picking text-center">
                    <div id="quantity_wave" class="input-group input-picking text-center">
                         <span class="input-group-btn">
                             <button class="btn btn-default" data-dir="dwn"><span class="glyphicon glyphicon-minus"></span></button>
                         </span>
                         <input id="quantity-input-value" type="text" class="form-control text-center form-control-picking" value="0"/>
                         <span class="input-group-btn">
                            <button class="btn btn-default" data-dir="up"><span class="glyphicon glyphicon-plus"></span></button>
                         </span>
                    </div>
                </div>
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
                <h3><i class="fa fa-arrow-right buttons-icons-quantity" aria-hidden="true"></i></h3>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div id="qty_in_box" class="form-control form-control-picking pull-right text-center">0</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-left">
                <h4><span t-esc="location_name"/></h4>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right">
                <h4>picking_name<!--<span t-esc="product.picking_name"/>--></h4>
            </div>
        </div>
    </t>

    <t t-name="next_products">
        <table class="table" id="next-products-table">
            <!--<t t-foreach="moves" t-as="move">-->
                <tr>
                    <td id="next-product-img"><a href="#"><img src="#" class="center-block img-responsive"/><!--<img t-att-src="product.product_image" class="center-block img-responsive"/>--></a></td>
                    <td>product_name<!--<span t-esc="move.product.product_name"/>--></td>
                    <td><div class="form-control text-center">location_name<!--<span t-esc="move.product.location_name"/>--></div></td>
                    <td>product_quantity<!--<span t-esc="move.product.product_quantity"/>--></td>
                    <td><i class="fa fa-arrow-right" aria-hidden="true"></i></td>
                    <td>picking_name<!--<span t-esc="move.picking_name"/>--></td>
                </tr>
            <!--</t>-->
        </table>
    </t>

</templates>

