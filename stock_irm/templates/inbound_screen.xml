<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <template id="inbound_screen" name="Inbound Screen">
            <html lang="en">
                <head>
                    <meta charset="UTF-8"/>
                    <title>Title</title>

                    <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet"/>
                    <link href="/dyn_inbound/static/css/template.css" rel="stylesheet"/>
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
                    <script async="" src="js/bootstrap.min.js"></script>

                </head>
                <body>
                    <div class="container">
                        <div class="search-row row">
                            <h2>Select the supplier</h2>
                            <div class="col-md-12">
                                <div id="custom-search-input">
                                    <div class="input-group col-md-12">
                                        <input type="text" class="form-control input-lg" placeholder="Search for a supplier" />
                                        <span class="input-group-btn">
                                            <button class="btn btn-info btn-lg" type="button">
                                                <i class="glyphicon glyphicon-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="result-row">
                            <t t-foreach="suppliers" t-as="supplier">
                                <div class="col-xs-2 col-md-2">
                                    <a href="#" class="thumbnail" >
                                        <div class="square" style="background-image:url('https://www.google.be/images/branding/googlelogo/2x/googlelogo_color_272x92dp.png');"></div>

                                        <div class="square" t-field="supplier.image"></div>
                                    </a>
                                    <div class="square-label" t-esc="supplier.name"/>
                                </div>
                            </t>
                        </div>
                    </div>
                </body>
            </html>
        </template>
    </data>
</openerp>
