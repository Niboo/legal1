<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <template id="stock_irm.picking_assets" name="Stock IRM assets">
            <script type="text/javascript" src="/web/static/lib/underscore/underscore.js"></script>
            <script type="text/javascript" src="/web/static/lib/underscore.string/lib/underscore.string.js"></script>
            <script type="text/javascript" src="/web/static/lib/datejs/globalization/en-US.js"></script>

            <!-- jQuery stuff -->
            <script type="text/javascript" src="/web/static/lib/jquery/jquery.js"></script>
            <!--<script type="text/javascript" src="/web/static/lib/jquery.blockUI/jquery.blockUI.js"></script>-->
            <!--<script type="text/javascript" src="/web/static/lib/jquery.hotkeys/jquery.hotkeys.js"></script>-->
            <!--<script type="text/javascript" src="/web/static/lib/jquery.placeholder/jquery.placeholder.js"></script>-->
            <!--<script type="text/javascript" src="/web/static/lib/jquery.timeago/jquery.timeago.js"></script>-->
            <!--<script type="text/javascript" src="/web/static/lib/jquery.form/jquery.form.js"></script>-->

            <!--<script type="text/javascript" src="/web/static/lib/jquery.ba-bbq/jquery.ba-bbq.js"></script>-->

            <script type="text/javascript" src="/web/static/lib/qweb/qweb2.js"></script>
            <script type="text/javascript" src="/web/static/src/js/openerpframework.js"></script>
            <!--<script type="text/javascript" src="/web/static/src/js/tour.js"></script>-->

            <!--BOOTSTRAP-->
            <link id="bootstrap_css" rel='stylesheet' href='/web/static/lib/bootstrap/css/bootstrap.css' />
            <script type="text/javascript" src="/web/static/lib/bootstrap/js/bootstrap.js"></script>

            <link rel="stylesheet" href="/web/static/lib/fontawesome/css/font-awesome.css"/>

            <!--STOCK IRM-->
            <link href="/stock_irm/static/src/css/template.css" rel="stylesheet"/>
            <script type="text/javascript" src="/stock_irm/static/src/js/picking_waves_widget.js"></script>
            <script type="text/javascript" src="/stock_irm/static/src/js/picking_selector.js"></script>
        </template>

        <template id="stock_irm.picking_layout" name="Stock IRM Header">
            <html lang="en">
                <head>
                    <meta charset="UTF-8"/>
                    <title>Picking Waves</title>
                    <t t-call-assets="stock_irm.picking_assets" t-js="false"/>
                </head>
                <body>
                    <div class="modal fade" id="modalWindow" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" />
                                </div>
                                <div class="modal-body" />
                                <div class="modal-footer" />
                            </div>
                        </div>
                    </div>
                    <div>
                        <nav class="navbar navbar-default">
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav navbar-center">
                                    <li id="change-user"><a href="#"><span class="glyphicon glyphicon-user"/> <t t-esc="user_name"/></a></li>
                                </ul>
                                <ul class="nav navbar-nav navbar-center">
                                    <li id="change-worklocation"><a href="#"><span class="glyphicon glyphicon-cog"/> <t t-esc="worklocation_name"/></a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                    <div id="content">
                        <t t-raw="0"/>
                    </div>
                    <t t-call-assets="stock_irm.picking_assets" t-css="false"/>
                </body>
            </html>
        </template>

        <template id="stock_irm.picking_waves" name="Picking Waves">
            <t t-call="stock_irm.picking_layout">
            </t>
        </template>
    </data>
</openerp>
