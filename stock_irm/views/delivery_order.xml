<?xml version="1.0"?>
<openerp>
    <data>
        <record id="view_delivery_order" model="ir.ui.view">
            <field name="name">stock.delivery.order.form</field>
            <field name="model">stock.delivery.order</field>
            <field name="arch" type="xml">
                <form string="Stock Delivery Order">
                    <sheet>
                        <group>
                            <field name="reference" />
                            <field name="user_id" />
                            <field name="creation_time" />
                            <field name="write_time" />
                        </group>
                        <group>
                            <field name="note" />
                        </group>

                        <field name="stock_move_ids"/>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_delivery_order_tree" model="ir.ui.view">
            <field name="name">stock.delivery.order.tree</field>
            <field name="model">stock.delivery.order</field>
            <field name="arch" type="xml">
                <tree string="Delivery Orders">
                    <field name="reference" />
                    <field name="user_id" />
                    <field name="creation_time" />
                    <field name="write_time" />
                    <field name="note" />
                    <field name="stock_move_ids"/>
                </tree>
            </field>
        </record>

        <record id="delivery_order_action" model="ir.actions.act_window">
            <field name="name">Delivery Orders</field>
            <field name="res_model">stock.delivery.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>

        <menuitem action="delivery_order_action" id="menu_delivery_order"
            parent="stock.menu_stock_warehouse_mgmt" sequence="100"/>

    </data>
</openerp>
