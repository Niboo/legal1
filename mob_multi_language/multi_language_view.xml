<?xml version="1.0" encoding="utf-8"?>

<openerp>
	<data>	
		<record id="magento_language_mapping_form" model="ir.ui.view">
            <field name="name">language_mapping.form</field>
            <field name="model">language.mapping</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Language Mapping" edit="false">
                	<group>
						<field name="name" required="1" />
						<field name="mage_store_id" readonly="1" />
						<field name="create_date" readonly="1"/>
					</group>
				</form>
			</field>
			
        </record>
		
		<record id="magento_language_mapping_tree" model="ir.ui.view">
            <field name="name">language.mapping.tree</field>
            <field name="model">language.mapping</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" string="Language Mapping">	
					<field name="name" required="1" />
					<field name="mage_store_id" readonly="1" />
					<field name="create_date" readonly="1"/>
				</tree>
			</field>
        </record>

		<record id="magento_language_mapping_action" model="ir.actions.act_window">
            <field name="name">Language Mapping</field>
            <field name="res_model">language.mapping</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="magento_language_mapping_tree"/>
        </record>

        <menuitem id="mapping_id9" name="Language Mapping" parent="magento_bridge.menu_mapping_id" action="magento_language_mapping_action" sequence="9"/>
	</data>
</openerp>

