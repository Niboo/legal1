<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_picking_wave_form" model="ir.ui.view">
            <field name="name">picking.wave.form</field>
            <field name="model">stock.picking.wave</field>
            <field name="inherit_id" ref="stock_picking_wave.view_picking_wave_form"/>
            <field name="arch" type="xml">
                <button name="print_picking" position="before">
                    <button name="print_wave" string="Print Wave" type="object"/>
                </button>
                <field name="picking_ids" position="after">
                    <separator string="Picking Locations"/>
                    <field name="wave_location_ids">
                        <tree>
                            <field name="location_id"/>
                            <field name="product_id"/>
                            <field name="qty"/>
                            <field name="box_nbr"/>
                            <field name="wave_info"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

    </data>
</openerp>
