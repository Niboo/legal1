<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <template id="report_picking_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <t t-call="dyn_wave_picking_list.report_picking_layout_header" />
            <t t-raw="0" />
            <t t-call="dyn_wave_picking_list.report_picking_layout_footer" />
        </template>

        <template id="report_picking_layout_header">
            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 45px;"/>
                    </div>
                </div>
                <div class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid black;"></div>
                    </div>
                </div>
            </div>
        </template>

        <template id="report_picking_layout_footer">
            <div class="footer">
                <div style="border-top: 1px solid black;">
                    <span class="text-center" style="display:block; width: 80%; margin: 30px auto; float: left;">
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.magento_shipment, 600, 100)" style="float:left; height:40px; width:240px;"/>
                        <p style="position:relative; margin: 0 auto;">Prepared with great care by <span t-esc='o.wave_id.get_user_name_picking()'/></p>
                    </span>
                    <span style="font-size:5em; float: right;">
                        #<span t-field="o.box_nbr"/>
                    </span>

                    <ul class="list-inline" style="position: absolute; bottom: 0;">
                        <li>Page:</li>
                        <li><span class="page"/></li>
                        <li>/</li>
                        <li><span class="topage"/></li>
                    </ul>
                </div>
            </div>
        </template>

        <template id="report_picking" inherit_id="stock.report_picking">
            <xpath expr="//t[@t-call='report.external_layout']" position="attributes">
                <attribute name="t-call">dyn_wave_picking_list.report_picking_layout</attribute>
            </xpath>
<!--
            <xpath expr="//img[@style='width:300px;height:50px;']" position="before">
                <h3 style="text-align: center;">Picking</h3>
            </xpath>
 -->
            <xpath expr="//div[@class='col-xs-5 col-xs-offset-1']" position="replace"/>
            <xpath expr="//table[1]/thead/tr/th[2]" position="replace">
                <th><strong>Web Order #</strong></th>
            </xpath>
            <xpath expr="//span[@t-field='o.state']" position="replace">
                <span t-field="o.magento_shipment"/>
            </xpath>
            <xpath expr="//table[2]/thead/tr" position="replace">
                <tr>
                    <th><strong>Product</strong></th>
                    <th class="text-right"><strong>Quantity</strong></th>
                    <th><strong>Image</strong></th>
                </tr>
            </xpath>
            <xpath expr="//table[2]/tbody/tr" position="replace">
                <tr t-foreach="o.move_lines" t-as="move">
                    <t t-if="(o.state != 'partially_available') or (move.reserved_availability > 0)">
                        <td><span t-field="move.product_id"/></td>
                        <td class="text-right">
                            <t t-if="o.state == 'partially_available'">
                                <span t-field="move.reserved_availability"/> <span t-field="move.product_id.uom_id" groups="product.group_uom"/>
                            </t>
                            <t t-if="o.state != 'partially_available'">
                                <span t-field="move.product_uom_qty"/> <span t-field="move.product_uom" groups="product.group_uom"/>
                            </t>
                        </td>
                        <td style="horizontal-align: right;"><img t-att-src="'data:image/jpg;base64,%s' % move.product_id.image" class="img-rounded product_img"/></td>
                    </t>
                </tr>
            </xpath>
            <xpath expr="//div[@class='col-xs-4 pull-right']" position="before">
                <div class="col-xs-6">
                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                        <span><strong>Supplier Address:</strong></span>
                    </div>
                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                        <span><strong>Warehouse Address:</strong></span>
                    </div>
                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                        <span><strong>Customer Address:</strong></span>
                    </div>
                    <div t-if="o.partner_id" name="partner_header">
                        <div t-field="o.partner_id"
                           t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                    </div>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                        <span><strong>Delivery Address:</strong></span>
                        <div t-field="o.move_lines[0].partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                    </div>
                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_lines or not o.move_lines[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                        <span><strong>Warehouse Address:</strong></span>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='page']/div[2]" position="replace"/>
        </template>

    </data>
</openerp>
