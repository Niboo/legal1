<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_product_template_form_img_inh" model="ir.ui.view">
            <field name="name">product.product.images</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook" position="inside">
                    <page string="Images">
                        <field name="image_ids" nolabel='1'>
                            <tree string="images">
                                <field name='sequence' widget='handle'/>
                                <field name='name'/>
                                <field name='variant_id'/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <field name='image_medium' position='replace'>
                    <field name="image_medium" widget="image" class="oe_avatar oe_left" filename='main_image_name'/>
                    <field name='main_image_name' invisible='1'/>
                </field>

            </field>
        </record>

    </data>
</openerp>
