<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">Add purchase csv template to partner form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']/group" position="inside">
                    <group string="Purchase CSV template"
                           attrs="{'invisible': ['|', ('supplier', '=', False), '&amp;', ('is_company', '=', False), ('parent_id', '!=', False)]}">
                        <field name="purchase_csv_template" nolabel="1"
                               placeholder="[seller.product_code, line.product_id.name, line.product_qty, order.name]"
                               />
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
