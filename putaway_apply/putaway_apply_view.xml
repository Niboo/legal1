<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_putaway_inherit" model="ir.ui.view">
            <field name="name">product.putaway.form.inherit</field>
            <field name="model">product.putaway</field>
            <field name="inherit_id" ref="stock.view_putaway"/>
            <field name="arch" type="xml">
                <xpath expr="//div" position="replace"/>
                <xpath expr="//group" position="after">
                    <notebook string="Putaway">
                        <page string="Categories" attrs="{'invisible': [('method', '!=', 'fixed')]}">
                            <field name="fixed_location_ids" colspan="4" nolabel="1">
                                <tree editable="top">
                                    <field name="sequence" widget='handle'/>
                                    <field name="category_id"/>
                                    <field name="fixed_location_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Product" attrs="{'invisible': [('method', '!=', 'fixed')]}">
                            <field name="fixed_location_by_product_ids" colspan="4" nolabel="1">
                                <tree editable="top">
                                    <field name="sequence" widget='handle'/>
                                    <field name="product_id"/>
                                    <field name="fixed_location_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="putaway_byprod_strat_tree_view">
            <field name="name">stock.fixed.putaway.byprod.strat.tree</field>
            <field name="model">stock.fixed.putaway.byprod.strat</field>
            <field name="arch" type="xml">
                <tree string="Putaway"  >
                    <field name="product_id" string="Product"/>
                    <field name="putaway_id"/>
                    <field name="fixed_location_id" string="Location"/>
                </tree>
            </field>
        </record>

        <!-- Insert header for use in other modules -->
        <record model="ir.ui.view" id="putaway_byprod_strat_form_view">
            <field name="name">stock.fixed.putaway.byprod.strat.form</field>
            <field name="model">stock.fixed.putaway.byprod.strat</field>
            <field name="arch" type="xml">
                <form string="Putaway location per product"  >
                    <sheet>
                        <div class="oe_right oe_button_box" name="button_box">
                        </div>
                        <group>
                            <group name="data">
                                <field name="product_id" string="Product"/>
                                <field name="putaway_id"/>
                                <field name="fixed_location_id" string="Location"/>
                            </group>
                            <group name="filler" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="putaway_byprod_strat_search_view" model="ir.ui.view">
            <field name="name">Putaway By Product Search</field>
            <field name="model">stock.fixed.putaway.byprod.strat</field>
            <field name="arch" type="xml">
                <search string="Search Putaway By Product">
                    <field name="product_id"/>
                    <field name="fixed_location_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter string="Location" domain="[]" context="{'group_by':'fixed_location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_product_putaway_location">
            <field name="name">stock.fixed.putaway.byprod.strat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.fixed.putaway.byprod.strat</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="product_putaway_location_menu"
            name="Product Putaway Locations"
            parent="stock.menu_stock_configuration"
            action="action_product_putaway_location"/>

    </data>
</openerp>

